# ─── Database ───
DB_USER=btow
DB_PASSWORD=devpassword
DB_NAME=btow

# ─── Redis ───
REDIS_PASSWORD=devpassword

# ─── MinIO (S3-compatible storage) ───
MINIO_ACCESS_KEY=btow-admin
MINIO_SECRET_KEY=devpassword
MINIO_BUCKET=btow-uploads

# ─── LiveKit (Voice/Video) ───
LIVEKIT_API_KEY=devapikey
LIVEKIT_API_SECRET=devapisecret

# ─── JWT Secrets (generate with: openssl rand -base64 64) ───
JWT_ACCESS_SECRET=dev_access_secret_change_in_production_make_it_long_and_random
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_make_it_long_and_random

# ─── Message Encryption (generate with: openssl rand -hex 32) ───
# REQUIRED for production! Messages are encrypted at rest with this key.
# WARNING: Changing this key will make existing messages unreadable!
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32_do_not_use_this_in_production

# ─── Domain & SSL ───
DOMAIN=btow.local
ACME_EMAIL=dev@btow.local

# ─── App Config ───
MAX_FILE_SIZE=26214400          # 25MB in bytes
MAX_MESSAGE_LENGTH=4000
INVITE_CODE_LENGTH=8
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ─── Host / Networking ───
# Set this to your machine's LAN IP so the Docker containers can correctly
# build CORS_ORIGIN and MINIO_PUBLIC_URL. Find it with `ipconfig` (Windows)
# or `hostname -I` (Linux/Mac).
HOST_IP=192.168.1.100

# ─── Development ───
NODE_ENV=development
PORT=3000
WEB_PORT=5173