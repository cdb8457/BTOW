{
  "name": "@btow/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx drizzle/migrate.ts",
    "db:seed": "tsx drizzle/seed.ts",
    "migrate:encryption": "tsx src/scripts/migrate-encryption.ts",
    "migrate:encryption:dry": "tsx src/scripts/migrate-encryption.ts --dry-run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.989.0",
    "@aws-sdk/s3-request-presigner": "^3.989.0",
    "@btow/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.24.3",
    "fastify-type-provider-zod": "^1.1.2",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.15.0",
    "minio": "^7.1.3",
    "postgres": "^3.4.3",
    "redis": "^4.6.11",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^11.0.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "drizzle-kit": "^0.20.7",
    "eslint": "^8.55.0",
    "nanoid": "^5.0.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}