# =============================================================================
# Production Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in the actual values.
# Do NOT commit .env file to version control!
# =============================================================================

# =============================================================================
# Server Configuration
# =============================================================================
# IP address the server will bind to
HOST_IP=0.0.0.0

# Port for the web application
# Generate: Use any available port (e.g., 3000, 8080, 443)
WEB_PORT=3000

# MinIO Console Port
# Generate: Use any available port (e.g., 9001)
MINIO_CONSOLE_PORT=9001

# =============================================================================
# Database Configuration
# =============================================================================
# Generate DB_USER: Create a dedicated database user with appropriate permissions
DB_USER=app_user

# Generate DB_PASSWORD: Use a strong password generator (min 16 characters)
# Command: openssl rand -base64 32
DB_PASSWORD=your_strong_database_password_here

# Generate DB_NAME: Create a dedicated database for the application
DB_NAME=app_production

# =============================================================================
# Redis Configuration
# =============================================================================
# Generate REDIS_PASSWORD: Use a strong password generator
# Command: openssl rand -base64 32
REDIS_PASSWORD=your_strong_redis_password_here

# =============================================================================
# MinIO (S3-compatible Storage) Configuration
# =============================================================================
# Generate MINIO_ACCESS_KEY: Use alphanumeric characters (min 5 characters)
# Command: openssl rand -hex 12
MINIO_ACCESS_KEY=your_minio_access_key

# Generate MINIO_SECRET_KEY: Use a strong secret key
# Command: openssl rand -base64 32
MINIO_SECRET_KEY=your_minio_secret_key_here

# Generate MINIO_BUCKET: Create a unique bucket name for storing files
MINIO_BUCKET=app-files

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# Generate JWT_ACCESS_SECRET: Use a strong random secret for signing access tokens
# Command: openssl rand -base64 64
JWT_ACCESS_SECRET=your_jwt_access_secret_here

# Generate JWT_REFRESH_SECRET: Use a strong random secret for signing refresh tokens
# Command: openssl rand -base64 64
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# =============================================================================
# Encryption Configuration
# =============================================================================
# Generate ENCRYPTION_KEY: Use a 32-byte key for encrypting sensitive data
# Command: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# LiveKit Configuration (Real-time Communication)
# =============================================================================
# Generate LIVEKIT_API_KEY: Get from LiveKit cloud dashboard or self-hosted setup
# Command: openssl rand -hex 16
LIVEKIT_API_KEY=your_livekit_api_key

# Generate LIVEKIT_API_SECRET: Get from LiveKit cloud dashboard or self-hosted setup
# Command: openssl rand -base64 32
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# =============================================================================
# VAPID Configuration (Web Push Notifications)
# =============================================================================
# Generate VAPID_PUBLIC_KEY: Use web-push CLI or node-web-push library
# Command: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key

# Generate VAPID_PRIVATE_KEY: Generated alongside public key
VAPID_PRIVATE_KEY=your_vapid_private_key

# VAPID_SUBJECT: The subject for push notifications (usually your app URL)
# Format: mailto:your-email@example.com or https://your-app.com
VAPID_SUBJECT=mailto:admin@yourapp.com

# =============================================================================
# Application Limits Configuration
# =============================================================================
# Maximum file size in bytes (default: 100MB = 104857600 bytes)
MAX_FILE_SIZE=104857600

# Maximum message length in characters
MAX_MESSAGE_LENGTH=10000

# Access token expiry time in seconds (default: 15 minutes = 900 seconds)
ACCESS_TOKEN_EXPIRY=900

# Refresh token expiry time in seconds (default: 7 days = 604800 seconds)
REFRESH_TOKEN_EXPIRY=604800
